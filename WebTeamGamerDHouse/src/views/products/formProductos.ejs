<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%>
    <body>
        <%- include('../partials/header.ejs')%>
        
        <main class="registro">
            <h2>Formulario de Carga de Productos</h2>
            
            <form  class="formularioRegistro" action="/productos" method="post">
                <div class="etiqueta">
                    <label>Genero:</label>
                        <select  class="input" name="generos">

                            <% for( let i = 0; i < productos.length; i++ ) { %>

                                <option value="<%= productos[i].genero.id %> ">

                                    <%= productos[i].genero.nombre%> 
                                                                
                                </option>
                            
                            <% } %>
                                                                                  
                        </select>
                       
                
                    </div>
                    <div class="etiqueta">
                        <label>Plataforma:</label>
                            <select  class="input" name="plataformas">
                                
                                <% for( let i = 0; i < productos.length; i++ ) { %>
                                    <option value="<%=productos[i].plataforma.id%> ">
                                        
                                        <%= productos[i].plataforma.nombre%> 
    
                                                                    
                                    </option>
                                
                                <% } %>
                                                                                      
                            </select>
                           
                    
                        </div>
                <div class="etiqueta">
                    <label>Nombre Producto</label>
                    <input class="input" type="text" name="nombre" placeholder="Ingrese su nombre">
                </div>
                <div class="etiqueta">
                    <label >Descripcion</label>
                    <input class="input" type="textarea" name="descripcion" placeholder="descripcion del producto">
                </div>
                <div class="etiqueta">
                    <label>Precio:</label>
                    <input class="input" type="number" name="precio"placeholder="ingrese precio">
            </div>
                    
            <div class="etiqueta">
                    <label>Ingresar Foto del Articulo</label>
                        <input  class="input" type="file" name="imagen" accept=".jpj .png" multiple >
            </div> 
                
            </div>
            
            
                <input  class="botonEnvio" type="submit" value="Cargar producto">
            
            



        </form>

    



    </main>

<%- include('../partials/footer.ejs')%>
</body>

</html>